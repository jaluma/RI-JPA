	<!-- DEFINICION DE LAS ENTIDADES -->

	<entity class="uo.ri.model.Averia">
		<table name="TAverias">
			<unique-constraint>
				<column-name>FECHA</column-name>
				<column-name>VEHICULO_ID</column-name>
			</unique-constraint>
		</table>
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<basic name="fecha">
				<temporal>TIMESTAMP</temporal>
			</basic>
			<basic name="status">
				<enumerated>STRING</enumerated>
			</basic>
			<many-to-one name="vehiculo" target-entity="uo.ri.model.Vehiculo" />
			<many-to-one name="factura" target-entity="uo.ri.model.Factura" />
			<many-to-one name="mecanico" target-entity="uo.ri.model.Mecanico" />
			<one-to-many name="intervenciones" target-entity="uo.ri.model.Intervencion"
				mapped-by="averia" />
		</attributes>
	</entity>

	<entity class="uo.ri.model.Bono" name="TBonos">

		<attributes>
			<basic name="codigo">
				<column unique="true" />
			</basic>
		</attributes>
	</entity>

	<entity class="uo.ri.model.Cargo">
		<table name="TCargos">
			<unique-constraint>
				<column-name>FACTURA_ID</column-name>
				<column-name>MEDIOPAGO_ID</column-name>
			</unique-constraint>
		</table>
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<many-to-one name="factura" target-entity="uo.ri.model.Factura" />
			<many-to-one name="medioPago" target-entity="uo.ri.model.MedioPago" />
		</attributes>
	</entity>

	<entity class="uo.ri.model.Cliente" name="TClientes">
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<basic name="dni">
				<column unique="true" />
			</basic>
			<one-to-many name="vehiculos" target-entity="uo.ri.model.Vehiculo"
				mapped-by="cliente" />
			<one-to-many name="mediosPago" target-entity="uo.ri.model.MedioPago"
				mapped-by="cliente" />
		</attributes>
	</entity>

	<entity class="uo.ri.model.Factura" name="TFacturas">
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<basic name="numero">
				<column unique="true" />
			</basic>
			<basic name="fecha">
				<temporal>TIMESTAMP</temporal>
			</basic>
			<basic name="status">
				<enumerated>STRING</enumerated>
			</basic>
			<one-to-many name="averias" target-entity="uo.ri.model.Averia"
				mapped-by="factura" />
			<one-to-many name="cargos" target-entity="uo.ri.model.Cargo"
				mapped-by="factura" />
		</attributes>
	</entity>

	<entity class="uo.ri.model.Intervencion">
		<table name="TIntervenciones">
			<unique-constraint>
				<column-name>AVERIA_ID</column-name>
				<column-name>MECANICO_ID</column-name>
			</unique-constraint>
		</table>
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<many-to-one name="averia" target-entity="uo.ri.model.Averia" />
			<many-to-one name="mecanico" target-entity="uo.ri.model.Mecanico" />
			<one-to-many name="sustituciones" target-entity="uo.ri.model.Sustitucion"
				mapped-by="intervencion" />
		</attributes>
	</entity>

	<entity class="uo.ri.model.Mecanico" name="TMecanicos">
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<basic name="dni">
				<column unique="true" />
			</basic>

			<one-to-many name="averias" target-entity="uo.ri.model.Averia"
				mapped-by="mecanico" />
			<one-to-many name="intervenciones" target-entity="uo.ri.model.Intervencion"
				mapped-by="mecanico" />
			<one-to-many name="contratos" target-entity="uo.ri.model.Contract"
				mapped-by="mechanic" />
		</attributes>
	</entity>

	<entity class="uo.ri.model.MedioPago" name="TMediosPago">
		<inheritance strategy="JOINED" />
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<many-to-one name="cliente" target-entity="uo.ri.model.Cliente" />
			<one-to-many name="cargos" target-entity="uo.ri.model.Cargo"
				mapped-by="medioPago" />
		</attributes>
	</entity>

	<entity class="uo.ri.model.Metalico" name="TMetalico" />

	<entity class="uo.ri.model.Repuesto" name="TRepuestos">
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<basic name="codigo">
				<column unique="true" />
			</basic>

			<one-to-many name="sustituciones" target-entity="uo.ri.model.Sustitucion"
				mapped-by="repuesto" />
		</attributes>
	</entity>

	<entity class="uo.ri.model.Sustitucion">
		<table name="TSustituciones">
			<unique-constraint>
				<column-name>REPUESTO_ID</column-name>
				<column-name>INTERVENCION_ID</column-name>
			</unique-constraint>
		</table>
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<many-to-one name="repuesto" target-entity="uo.ri.model.Repuesto" />
			<many-to-one name="intervencion" target-entity="uo.ri.model.Intervencion" />
		</attributes>
	</entity>

	<entity class="uo.ri.model.TarjetaCredito" name="TTarjetasCredito">

		<attributes>
			<basic name="numero">
				<column unique="true" />
			</basic>
			<basic name="validez">
				<temporal>TIMESTAMP</temporal>
			</basic>
		</attributes>
	</entity>

	<entity class="uo.ri.model.TipoVehiculo" name="TTiposVehiculo">
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<basic name="nombre">
				<column unique="true" />
			</basic>

			<one-to-many name="vehiculos" target-entity="uo.ri.model.Vehiculo"
				mapped-by="tipoVehiculo" />
		</attributes>
	</entity>

	<entity class="uo.ri.model.Vehiculo" name="TVehiculos">
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY" />
			</id>
			<basic name="matricula">
				<column unique="true" />
			</basic>

			<basic name="numAverias">
				<column name="NUM_AVERIAS" />
			</basic>

			<many-to-one name="cliente" target-entity="uo.ri.model.Cliente" />
			<many-to-one name="tipoVehiculo" target-entity="uo.ri.model.TipoVehiculo">
				<join-column name="TIPO_ID" />
			</many-to-one>
			<one-to-many name="averias" target-entity="uo.ri.model.Averia"
				mapped-by="vehiculo" />
		</attributes>
	</entity>

	<!-- AMPLIACION -->

	<entity class="uo.ri.model.ContractType" name="TTipoContratos">
		<attributes>
			<id name="id">
				<column name="TIPO_ID"/>
				<generated-value strategy="IDENTITY" />
			</id>
			<basic name="name">
				<column name="NOMBRE" unique="true" />
			</basic>
			<basic name="compensationDaysPerYear">
				<column name="DIAS_COMPENSACION_POR_AÑO"/>
			</basic>

			<one-to-many name="contracts" target-entity="uo.ri.model.Contract"
				mapped-by="contractType" />
		</attributes>
	</entity>

	<entity class="uo.ri.model.ContractCategory" name="TCategoriaContratos">
		<attributes>
			<id name="id">
				<column name="CATEGORIA_ID"/>
				<generated-value strategy="IDENTITY" />
			</id>
			<basic name="name">
				<column name="NOMBRE" unique="true" />
			</basic>
			<basic name="trieniumSalary">
				<column name="TRIENIO_SALARIO"/>
			</basic>
			<basic name="productivityPlus">
				<column name="PRODUCTIVIDAD_PLUS"/>
			</basic>

			<one-to-many name="contracts" target-entity="uo.ri.model.Contract"
				mapped-by="contractCategory" />

		</attributes>
	</entity>

	<entity class="uo.ri.model.Contract" name="TContratos">
		<attributes>
			<id name="id">
				<column name="CONTRATO_ID"/>
				<generated-value strategy="IDENTITY" />
			</id>
			
			<!-- <basic name="mechanic">
				<column name="CONTRATO_ID"/>
			</basic>
			
			<basic name="contractType">
				<column name="CONTRATO_ID"/>
			</basic>
			
			<basic name="contractCategory">
				<column name="CONTRATO_ID"/>
			</basic> -->
			
			<basic name="startDate">
				<column name="FECHA_INICIAL"/>
				<temporal>TIMESTAMP</temporal>
			</basic>
			<basic name="endDate">
				<column name="FECHA_FIN"/>
				<temporal>TIMESTAMP</temporal>
			</basic>
			<basic name="baseSalaryPerYear">
				<column name="SALARIO_BASE_ANUAL"/>
			</basic>
			<basic name="compensation">
				<column name="COMPENSACION"/>
			</basic>
			<basic name="status">
				<enumerated>STRING</enumerated>
			</basic>
			<many-to-one name="contractCategory" target-entity="uo.ri.model.ContractCategory" >
				<join-column name="CATEGORIA_ID" />
			</many-to-one>
			<many-to-one name="contractType" target-entity="uo.ri.model.ContractType" >
				<join-column name="TIPO_ID" />
			</many-to-one>
			<many-to-one name="mechanic" target-entity="uo.ri.model.Mecanico" >
				<join-column name="MECANICO_ID" />
			</many-to-one>
			<one-to-many name="payrolls" target-entity="uo.ri.model.Payroll"
				mapped-by="contract" />
		</attributes>
	</entity>


	<entity class="uo.ri.model.Payroll" name="TNominas">
		<attributes>
			<id name="id">
				<column name="NOMINA_ID"/>
				<generated-value strategy="IDENTITY" />
			</id>
			<basic name="date">
				<column name="FECHA_N"/>
				<temporal>TIMESTAMP</temporal>
			</basic>
			<basic name="baseSalary">
				<column name="SALARIO_BASE"/>
			</basic>
			<basic name="extraSalary">
				<column name="SALARIO_EXTRA"/>
			</basic>
			<basic name="productivity">
				<column name="PRODUCTIVIDAD"/>
			</basic>
			<basic name="triennium">
				<column name="TRIENIO"/>
			</basic>
			<basic name="socialSecurity">
				<column name="SEGURIDAD_SOCIAL"/>
			</basic>
			<basic name="grossTotal">
				<column name="TOTAL_BRUTO"/>
			</basic>
			<basic name="discountTotal">
				<column name="TOTAL_DESCUENTOS"/>
			</basic>
			<basic name="netoTotal">
				<column name="TOTAL_NETO"/>
			</basic>
			<many-to-one name="contract" target-entity="uo.ri.model.Contract" >
				<join-column name="CONTRATO_ID" />
			</many-to-one>

		</attributes>
	</entity>
	
	<!-- DEFINICION DE LOS VALUES TYPES -->

	<embeddable class="uo.ri.model.types.Address" /> 

</entity-mappings>